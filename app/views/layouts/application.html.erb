<!DOCTYPE html>
<html>
<head>
  <title>Slack Overflow</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <h1>Slack Overflow</h1>
  <% if current_user %>
  Signed-in as: <%= current_user.email %> | <%= link_to "Sign out", '/signout' %>
  <% else %>
  <%= link_to "Sign up", '/signup' %> | <%= link_to "Sign in", '/signin' %>
  <% end %>

  <%= flash[:alert] %>
  <%= flash[:notice] %>

<hr>

  <%= yield %>

</body>
</html>
